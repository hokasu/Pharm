<% title "New Prescription - " + @prescription.product.description + " for " + @patient.fullname %>
<strong><%= @prescription.product.description %></strong>
<% form_for [@patient, @prescription] do |f| %>
<%= render :partial => 'form', :locals => {:f => f} %>
<p><%= f.submit "Create" %></p>
<% end %>
<p><%= link_to "Back to List", prescriptions_path %></p><%= link_to 'New prescription', patient_products_path(@patient) %>
