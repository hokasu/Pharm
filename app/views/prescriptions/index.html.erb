<% title "Prescriptions" %>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Ancillary Instructions</th>
  </tr>
  <% for prescription in @prescriptions %>
    <tr>
      <td><%=h prescription.start %></td>
      <td><%=h prescription.end %></td>
      <td><%=h prescription.ancillary_instructions %></td>
      <td><%= link_to "Show", prescription %></td>
      <td><%= link_to "Edit", edit_prescription_path(prescription) %></td>
      <td><%= link_to "Destroy", prescription, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Prescription", new_prescription_path %></p>
