<h1>New patient</h1>

<% form_for(@patient) do |f| %>
  <%= f.error_messages %>

   <p>
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label :middlename %><br />
    <%= f.text_field :middlename %>
  </p>
  <p>
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
    </p>
    <p>
    <%= f.label :dob %><br />
    <%= f.date_select :dob, :start_year => 1900  %>
  </p>
  <p>
    <%= f.label :allergies %><br />
    <%= f.text_area :allergies %>
  </p>
  <p>
    <%= f.label :sensitivities %><br />
    <%= f.text_area :sensitivities %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', patients_path %>
