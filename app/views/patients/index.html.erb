<h1>Listing patients</h1>
<%= debug params %>
<table>
  <tr>
    <th>Firstname</th>
    <th>Middlename</th>
    <th>Surname</th>
    <th>Dob</th>
    <th>Allergies</th>
    <th>Sensitivities</th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%=h patient.firstname %></td>
    <td><%=h patient.middlename %></td>
    <td><%=h patient.surname %></td>
    <td><%=h patient.dob %></td>
    <td><%=h patient.allergies %></td>
    <td><%=h patient.sensitivities %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Create admission', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New patient', new_patient_path %>
